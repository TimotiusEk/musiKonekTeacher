<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.timotiusek.musikonekteacher.SetRevisedScheduleActivity"
    android:orientation="vertical"
    >
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/schedule_lv__set_revised_schedule_act"
        android:layout_weight="1"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:id="@+id/set_schedule_btn__set_revised_schedule_act"
        android:text="Tetapkan Jadwal"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/round_btn"
        android:textColor="@android:color/white"
        />
</LinearLayout>
