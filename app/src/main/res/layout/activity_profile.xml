<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout__profile_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar__profile_act"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@style/MediumWhiteText"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleGravity="center"
            app:expandedTitleMarginTop="195dp">

            <ImageView
                android:id="@+id/header_image__profile_act"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/city"
                app:layout_collapseMode="parallax"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/avatar"
                app:border_width="3dp"
                app:border_color="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/profile_image__profile_act"
                />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar__profile_act"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:title="Testing"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <ImageView
                android:id="@+id/link_to_edit_profile__profile_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:tint="@android:color/white"
                android:layout_gravity="end"
                android:padding="10dp"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll__profile_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#b7b7b7"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/gender__profile_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Email Addresss"
                    android:textColor="#b7b7b7"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/email__profile_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jonathan.simananda@gmail.com"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Course Completed"
                    android:textColor="#b7b7b7"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/course_completed__profile_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Favorite Instrument"
                    android:textColor="#b7b7b7"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/favourite_instrument__profile_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guitar, Piano"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Address"
                    android:textColor="#b7b7b7"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/address__profile_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taman Aries"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>