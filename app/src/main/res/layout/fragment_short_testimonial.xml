<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.timotiusek.musikonekteacher.ShortTestimonialFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/teacher_image__short_testimonial_fra"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/avatar"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/course_name__short_testimonial_fra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kursus Piano Pemula" />

                            <TextView
                                android:id="@+id/teacher_name__short_testimonial_fra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hendra Sulaeman"
                                android:textColor="#8a929b" />
                        </LinearLayout>
                    </LinearLayout>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rating_bar__short_testimonial_fra"
                        android:layout_gravity="center"
                        android:isIndicator="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Komentar"
                        android:textColor="#b7b7b7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/comment__short_testimonial_fra"
                        android:text="- Kurangi berkonsentrasi\n- Jangan terlalu sedikit istirahat"
                        android:textSize="18sp"
                        />
                    <Button
                        android:id="@+id/open_btn__short_testimonial_fra"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/round_btn"
                        android:text="Buka"
                        android:textColor="@android:color/white"
                        android:layout_weight="0"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/student_image__short_testimonial_fra"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/avatar"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/course_name2__short_testimonial_fra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kursus Piano Pemula" />

                            <TextView
                                android:id="@+id/student_name__short_testimonial_fra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Murid A"
                                android:textColor="#8a929b" />
                        </LinearLayout>
                    </LinearLayout>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rating_bar_for_student_short_testimonial_fra"
                        android:layout_gravity="center"
                        android:isIndicator="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Komentar"
                        android:textColor="#b7b7b7"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/comment_for_student_short_testimonial_fra"
                            android:text="- Kurangi berkonsentrasi\n- Jangan terlalu sedikit istirahat"
                            android:textSize="18sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:id="@+id/comment_for_student_edit_short_testimonial_fra"/>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/open_btn_for_student_short_testimonial_fra"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/round_btn"
                        android:text="Buka"
                        android:textColor="@android:color/white"
                        android:layout_weight="0"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
