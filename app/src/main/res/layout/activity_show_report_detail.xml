<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.timotiusek.musikonekteacher.ShowReportDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detil Waktu Pertemuan"
            android:textSize="20sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Senin, 31 Juli 2015"
                    android:id="@+id/show_date__show_report_detail_act"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Jam 17:30"
                    android:id="@+id/show_time__show_report_detail_act"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detil Laporan"
            android:textSize="20sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lagu &amp; Pekerjaan Rumah"
                    android:textColor="#b7b7b7"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/show_homework__show_report_detail_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Despacito \n- River flows in you \n- Papa mama loca pipa"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latihan untuk Pertemuan Berikutnya"
                    android:textColor="#b7b7b7"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/show_exercises__show_report_detail_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buku textbook 'Menjadi Maestro' halaman 53 bagian 4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Komentar"
                    android:textColor="#b7b7b7"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/show_comment__show_report_detail_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jangan tidur terlalu malam, rajin olahraga dan banyak minum air"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!--<Button-->
            <!--android:id="@+id/checkin_btn__show_report_detail_act"-->
